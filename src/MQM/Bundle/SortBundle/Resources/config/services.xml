<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
        
    <parameters>
        <parameter key="mqm_sort.manager.class">MQM\Bundle\SortBundle\Sort\SortManagerInterface</parameter>
        <parameter key="mqm_sort.factory.class">MQM\Bundle\SortBundle\Sort\WebSortFactory</parameter>
        <parameter key="mqm_sort.helper.class">MQM\Bundle\SortBundle\Helper\Helper</parameter>
    </parameters>
    
    <services>
        <service id="mqm_sort" class="%mqm_sort.manager.class%" public="true"
                scope="request"
                factory-service="mqm_sort.factory"
                factory-method="buildSortManager"
                >
        </service>
        
        <service id="mqm_sort.factory" class="%mqm_sort.factory.class%" public="true"
            scope="request">
            <argument type="service" id="mqm_sort.helper" />
            <argument type="service" id="router" />
        </service>
        
        <service id="mqm_sort.helper" class="%mqm_sort.helper.class%" public="true"
            scope="request">
            <argument type="service" id="request" />
        </service>
    </services>
    
</container>
